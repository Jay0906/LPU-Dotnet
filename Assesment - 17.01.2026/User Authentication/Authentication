using System;

namespace UserAuthentication;

public class Authentication
{
    public User ValidatePassword(string name,string password,string confirmationpassword)
    {
        User user=new User(name,password,confirmationpassword);
        if (!password.Equals(confirmationpassword))
        {
            throw new PasswordMismatchException("Password entered does not match");
        }
        return user;
    }
}

[Serializable]
internal class PasswordMismatchException : Exception
{
    public PasswordMismatchException()
    {
    }

    public PasswordMismatchException(string? message) : base(message)
    {
    }

    public PasswordMismatchException(string? message, Exception? innerException) : base(message, innerException)
    {
    }
}
