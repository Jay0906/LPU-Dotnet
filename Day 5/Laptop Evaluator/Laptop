using System;

namespace LaptopEvaluator;

public class Laptop:Computer
{
    public int DisplaySize {get; set;}
    public int BatteryVolt {get; set;}

    public double LaptopPriceCalculation()
    {
        int processorPrice=0;

        if(processor=="i3") processorPrice=1500;
        else if(processor=="i5") processorPrice=3000;
        else if(processor=="i7") processorPrice=4500;

        double price= processorPrice+(ramsize*200) + (HarddiskSize*1500) + (GraphicCard*2500) + (BatteryVolt*20) + (DisplaySize*250);
        return price;
    }
}
